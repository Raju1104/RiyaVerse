<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Servlet_04</display-name>
	<welcome-file-list>
		<welcome-file>RiyaVerse_Emp.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Add Employee</servlet-name>
		<servlet-class>P.com.Add_data</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Add Employee</servlet-name>
		<url-pattern>/Add</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Delete Employee</servlet-name>
		<servlet-class>P.com.Delete_data</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Delete Employee</servlet-name>
		<url-pattern>/Delete</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Update Employee</servlet-name>
		<servlet-class>P.com.Update_emp</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Update Employee</servlet-name>
		<url-pattern>/Update</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Single Employee data</servlet-name>
		<servlet-class>P.com.Selectdata</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Single Employee data</servlet-name>
		<url-pattern>/Singledata</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>all Employee</servlet-name>
		<servlet-class>P.com.Viewall_emp</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>all Employee</servlet-name>
		<url-pattern>/viewall</url-pattern>
	</servlet-mapping>

</web-app>